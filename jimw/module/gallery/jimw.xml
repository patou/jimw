<?xml version="1.0" encoding="UTF-8"?>
<jimwModule>
<name>Jimw Gallery</name>
<comment>Small Album photo</comment>
<version>1.0</version>
<author>Patrice De Saint Steban</author>
<controllers><!-- List of controller can be used by a tree -->
		<gallery><!-- Name of the controller -->
			<name>Blog</name><!-- Readable name -->
			<params><!-- Param form -->
				<elements>
					<dir>
						<type>dirchooser</type>
						<options>
							<label>Directory</label>							
						</options>
					</dir>
					<can_download>
						<type>checkbox</type>
						<options>
							<label>Can download file</label>							
						</options>
					</can_download>
				</elements>
			</params>
		</gallery>
	</controllers>
</jimwModule>