<?xml version="1.0" encoding="UTF-8"?>
<jimwModule>
	<name>Jimw Category</name>
	<comment>Display last modified page in a given tree</comment>
	<version>0.1</version>
	<author>Patrice De Saint Steban</author>
	<controllers><!-- List of controller can be used by a tree -->
		<category><!-- Name of the controller -->
			<name>Category</name><!-- Readable name -->
			<params><!-- Param form -->
				<elements>
					<tree_root>
						<type>tree</type>
						<options><label>Tree Root</label></options>
					</tree_root>
					<number>
						<type>text</type>
						<options>
							<label>Number</label>							
						</options>
					</number>
				</elements>
			</params>
		</category>
	</controllers>
</jimwModule>